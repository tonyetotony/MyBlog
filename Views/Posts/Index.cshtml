@model IEnumerable<MyBlog.Data.Entities.Post>

@{
    ViewData["Title"] = "Index";
}

@{
    Layout = "_Layout";
}

<div class="container mt-5">
    <h1 class="mb-4 text-center">Мой блог</h1>
    <div class="d-flex justify-content-center">
        <a asp-action="Create" class="btn btn-primary mb-3 shadow p-3">Создать новый пост</a>
    </div>

    @if (Model.Any())
    {
        foreach (var item in Model)
        {
            <div class="card my-3 shadow p-3 w-75 mx-auto">
                <div class="card-body">
                    <h5 class="card-title">@item.Title</h5>
                    <p class="card-text">@Html.Raw(item.Content)</p>
                    <p class="card-text"><small class="text-muted">Опубликовано: @item.CreatedAt</small></p>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info btn-sm float-start">Редактировать</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm float-end">Удалить</a>
                </div>
            </div>
        }
    }
    else
    {
        <p class="lead text-center">Пока ничего не опубликовано.</p>
    }
</div>