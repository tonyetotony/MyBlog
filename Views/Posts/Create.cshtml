@model MyBlog.Data.Entities.Post

@{
    ViewData["Title"] = "Create";
}

@{
    Layout = "_Layout";
}

<div class="container mt-5">
    <h1 class="mb-4 text-center">Создание нового поста</h1>

    <form method="post" class="row g-3 needs-validation" novalidate>
        <div class="col-md-12">
            <label for="Title" class="form-label">Заголовок</label>
            <input type="text" class="form-control" id="Title" name="Title" placeholder="Название вашего поста..." required />
            <div class="invalid-feedback">Пожалуйста, заполните название поста.</div>
        </div>

        <div class="col-md-12">
            <label for="Content" class="form-label">Контент</label>
            <textarea class="form-control" id="Content" name="Content" rows="10" placeholder="Что хотите рассказать?" required></textarea>
            <div class="invalid-feedback">Пожалуйста, напишите содержание поста.</div>
        </div>

        <div class="col-12 d-flex justify-content-between align-items-center">
            <button type="submit" class="btn btn-success">Опубликовать</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Отмена</a>
        </div>
    </form>
</div>
